{
  "name": "dating-cards",
  "private": true,
  "version": "0.0.0",
  "author": "Dating Cards Team <dev@example.com>",
  "type": "module",
  "main": "electron-dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "electron:dev": "concurrently -k \"vite\" \"tsc -p tsconfig.electron.json --watch\" \"wait-on http://localhost:5173 && wait-on electron-dist/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "electron:build": "npm run build && npm run build:electron",
    "electron:package": "npm run build && npm run build:electron && electron-builder",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    "dist:win": "npm run build && npm run build:electron && electron-builder --win"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.4",
    "@mui/icons-material": "^5.15.20",
    "@mui/material": "^5.15.20",
    "idb": "^8.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.datingcards",
    "productName": "Dating Cards",
    "directories": {
      "output": "release"
    },
    "files": ["dist/**", "electron-dist/**", "package.json"],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
